#!/bin/bash

conda create --name micfix "python<3.13"
conda init
conda activate micfix
mamba install \
    numpy \
    scipy \
    "matplotlib>=3.3.0" \
    pandas \
    pyarrow \
    statsmodels \
    scikit-learn \
    scikit-image \
    nibabel \
    nilearn \
    pyfftw \
    pywavelets \
    pyqt6 \
    pyqt6-sip \
    "pyqtgraph>=0.13.4" \
    tqdm

mamba install tensorflow keras
