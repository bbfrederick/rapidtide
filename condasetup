#!/bin/bash

conda create --name micfix "python<3.13"
conda init
conda activate micfix
mamba install \
    numpy \
    "scipy>=1.16.1" \
    matplotlib \
    pandas \
    pyarrow \
    statsmodels \
    scikit-learn \
    scikit-image \
    nibabel \
    nilearn \
    pyfftw \
    pywavelets \
    pyqt6 \
    pyqt6-sip \
    pyqtgraph \
    tqdm \
    versioneer \
    requests

mamba install \
    tf-keras \
    "tensorflow >= 2.10.0" \
    keras
