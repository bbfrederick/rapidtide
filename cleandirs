#!/bin/bash

rm -r build dist rapidtide.egg-info __pycache__ */__pycache__ */*/__pycache__

pipresult="True"

while [ -n "$pipresult" ]
do
    pipresult=`pip uninstall -y rapidtide | grep "Found existing"`
    if [[ -z $pipresult ]]
    then
        echo No installations found - quitting.
        break
    else
        echo "$pipresult" - removing.
    fi
done
rm -r build dist rapidtide.egg-info
