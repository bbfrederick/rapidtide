#!/bin/bash

for LEVEL in min norm more max
do
    mkdir -p ../dst/${LEVEL}
    rapidtide \
        --nprocs -1 \
        --passes 3 \
        --outputlevel ${LEVEL} \
        --noglm \
        sub-RAPIDTIDETEST.nii.gz \
        ../dst/${LEVEL}/sub-RAPIDTIDETEST_${LEVEL}
    for NDERIV in 0 1 2
    do
        RUN=${LEVEL}glm${NDERIV}
    
        mkdir -p ../dst/${RUN}
        rapidtide \
            --nprocs -1 \
            --passes 3 \
            --outputlevel ${LEVEL} \
            --glmderivs ${NDERIV} \
            sub-RAPIDTIDETEST.nii.gz \
            ../dst/${RUN}/sub-RAPIDTIDETEST_${RUN}
    done
done
