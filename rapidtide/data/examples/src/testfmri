#!/bin/bash

rm -rf ../dst/*
for LEVEL in min normal more max
do
    mkdir -p ../dst/${LEVEL}
    rapidtide \
        --nprocs -1 \
        --passes 3 \
        --searchrange -5 10 \
        --outputlevel ${LEVEL} \
        --noglm \
        sub-RAPIDTIDETEST.nii.gz \
        ../dst/${LEVEL}/XXX
    for NDERIV in 0 1
    do
        RUN=${LEVEL}glm${NDERIV}
    
        mkdir -p ../dst/${RUN}
        rapidtide \
            --nprocs -1 \
            --passes 3 \
            --searchrange -5 10 \
            --outputlevel ${LEVEL} \
            --glmderivs ${NDERIV} \
            sub-RAPIDTIDETEST.nii.gz \
            ../dst/${RUN}/XXX
    done
done
