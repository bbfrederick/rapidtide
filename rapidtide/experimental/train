            countlim=countlim,
            readlim=readlim,
            readskip=readskip,
            num_units=num_units,
            debug=debug,
            invert=invert,
            startskip=startskip,
            endskip=endskip,
            step=step,
            encoding_dim=encoding_dim,
            excludebysubject=excludebysubject,
        )
    """

    # train CNN
    nettype = "cnn"
    num_epochs = 60
    window_size = 64
    for window_size in [64]:
        for usebadpts in [True]:
            for kernel_size in [3]:
                for num_layers in [19, 29]:
                    for num_filters in [50]:
                        dotraining(
                            thedatadir,
                            num_pretrain_epochs=num_pretrain_epochs,
                            num_epochs=num_epochs,
                            excludethresh=excludethresh,
                            corrthresh=corrthresh,
                            window_size=window_size,
                            num_layers=num_layers,
                            num_filters=num_filters,
                            kernel_size=kernel_size,
