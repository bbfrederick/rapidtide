                            dofft=dofft,
                            nettype=nettype,
                            activation=activation,
                            usebadpts=usebadpts,
                            countlim=countlim,
                            readlim=readlim,
                            readskip=readskip,
                            num_units=num_units,
                            debug=debug,
                            invert=invert,
                            startskip=startskip,
                            endskip=endskip,
                            step=step,
                            encoding_dim=encoding_dim,
